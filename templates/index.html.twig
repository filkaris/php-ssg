{% extends 'base.html.twig' %}

{% block content %}
    {% for post in posts %}
        <section>
            <h2><a href="{{ post.slug }}">{{ post.title }}</a></h2>
            <small>{{ post.date.format('d F Y') }}</small>
            <p>{{ post.summary }}</p>
        </section>
        <hr />
    {% endfor %}
{% endblock %}

