<html>
<head>
    <title>{% block title %}{{ config.title }} - {{ config.subtitle }}{% endblock %}</title>
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Lora|Open+Sans&display=swap" rel="stylesheet">

    <!-- Code block syntax highlighting -->
    <link rel="stylesheet" type="text/css" href="assets/prism.css" />
    <script type="text/javascript" src="assets/prism.js"></script>

    <!-- Site Styles -->
    <link rel="stylesheet" type="text/css" href="assets/main.css" />
</head>
<body>
    <header>
        <big><a href="/">{{ config.title }}</a></big>
        <small>{{ config.subtitle }}</small>
    </header>
    <main>
        {% block content %}{% endblock %}
    </main>
    <footer>
    </footer>
</body>
</html>
